{
  "name": "@nearform/react-browser-hooks",
  "version": "0.1.0",
  "description": "react-browser-hooks React component",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "css",
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "build": "nwb build-react-component",
    "clean": "nwb clean-module && nwb clean-demo",
    "format": "prettier --write **/*.js",
    "lint": "eslint ./*.js src test",
    "lint-fix": "eslint ./*.js src test --fix",
    "prepublishOnly": "npm run build",
    "start": "npm run storybook",
    "storybook": "start-storybook -p 3000 -c storybook/.storybook",
    "build-storybook": "build-storybook -c storybook/.storybook",
    "test": "npm run test:unit",
    "test:unit": "jest",
    "test:acceptance": "testcafe chrome,firefox test/acceptance/ --app \"npm start\"",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "peerDependencies": {
    "react": "16.8.x"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@storybook/addon-options": "^4.1.11",
    "@storybook/addons": "^4.1.11",
    "@storybook/react": "^4.1.11",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "eslint": "^5.12.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-react-app": "^3.0.6",
    "eslint-plugin-flowtype": "^3.2.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.0.0",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "jest-dom": "^3.0.1",
    "lint-staged": "^8.1.1",
    "nwb": "0.23.x",
    "prettier": "^1.16.4",
    "react": "^16.8.0",
    "react-dom": "^16.8.0",
    "react-proxy-hook": "^0.4.2",
    "storybook-readme": "^4.0.5",
    "testcafe": "^0.23.3"
  },
  "author": "NearForm",
  "homepage": "https://github.com/nearform/react-browser-hooks",
  "license": "Apache-2.0",
  "repository": "https://github.com/nearform/react-browser-hooks",
  "keywords": [
    "react",
    "hooks",
    "browser",
    "events",
    "listeners",
    "fullscreen",
    "resize",
    "scroll",
    "mouse",
